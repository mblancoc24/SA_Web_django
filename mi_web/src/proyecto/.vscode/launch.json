{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--noreload",
                "0.0.0.0:8001"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "PYTHONUNBUFFERED": "1",
                "PORT": "8001"
            }
        }
    ]
}
